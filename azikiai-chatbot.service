[Unit]
Description=AzikiAI Chatbot Service
After=network.target

[Service]
Type=simple
User=kasperadm
WorkingDirectory=/home/kasperadm/projects/AzikiAI-codingbot
Environment="PATH=/home/kasperadm/projects/AzikiAI-codingbot/venv/bin"
ExecStart=/home/kasperadm/projects/AzikiAI-codingbot/venv/bin/python main.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
